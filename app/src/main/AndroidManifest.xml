<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._279project"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Set WelcomeActivity as the main launcher activity -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme._279project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Define MainActivity without intent-filter -->


        <!-- Define LoginActivity without exported attribute -->
        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".ForgotPasswordActivity" /> <!-- Add this line -->
        <activity android:name=".ProfileActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".HelpActivity"/>
        <activity android:name=".PropertyDetailsActivity" />
        <activity android:name=".SavedActivity"/>
        <activity android:name=".PredictActivity"/>
        <activity android:name=".PredictResultActivity" />
        <activity android:name=".ManageListingsActivity" />
        <activity android:name=".PostActivity" />
        <activity android:name=".FilterActivity" />



    </application>

</manifest>
