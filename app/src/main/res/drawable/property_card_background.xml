<!-- res/drawable/property_card_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Background color of the card -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional padding inside the card -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional shadow effect by using elevation or a slight stroke -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" /> <!-- Light grey stroke for subtle border -->
</shape>
